@model IEnumerable<Evpro.Gui.Models.OrgnizerModel>
@{
    Layout = "~/Views/Shared/Evpro-Template.cshtml";
}


<div class="content-wrapper" style="margin-top: -1800px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">

        <h2> Orgnizers List</h2>

        <p>
            @Html.ActionLink("Create New Orgnizer", "Create")
        </p>
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Orgnizers</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <tr>
                            <th >Id Orgnizer</th>
                            <th>Rating</th>
                            <th>Progress</th>
                            <th>Messages Count</th>
                            <th >Action</th>
                         
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.idUser)</td>
                                <td>@Html.DisplayFor(modelItem => item.rating)</td>
                                 
                                <td>
                                    <div class="progress progress-xs">
                                        <div class="progress-bar progress-bar-danger" style="width: @Html.DisplayFor(modelItem => item.nbrmsg)%   "></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-red">@Html.DisplayFor(modelItem => item.nbrmsg)   </span></td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.idUser }, new { @class = "btn bg-navy btn-flat margin" })

                                    @Html.ActionLink("Delete", "Delete", new { id = item.idUser }, new { @class = "btn bg-navy btn-flat margin" })
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>

    </section>
</div>